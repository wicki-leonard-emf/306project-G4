{
  "version": 2,
  "buildCommand": "cd code/front && npm ci || npm install && npm run build && cd ../back && npm ci || npm install",
  "outputDirectory": "code/front/build",
  "builds": [
    {
      "src": "code/back/src/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "code/back/src/index.js"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html",
      "status": 200
    }
  ]
}