{
  "version": 2,
  "buildCommand": "cd code/front && npm ci && npm run build && cd ../back && npm ci && npm run prisma:generate",
  "outputDirectory": "code/front/build",
  "builds": [
    {
      "src": "code/front/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "code/back/src/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "code/back/src/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "code/back/src/index.js"
    }
  ]
}