// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL") // Optional: only needed for migrations
}

enum UserRole {
  ADMIN
  ENSEIGNANT
  ELEVE
}

// Modèle Utilisateur
model User {
  id        String   @id
  email     String   @unique
  password  String   // Hash du mot de passe
  role      UserRole @default(ELEVE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  subscriptions RoomSubscription[]

  @@map("users")
}

// Modèle Salle de classe
model Room {
  id          String   @id
  name        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Seuils de température (définis par l'admin)
  minTemp     Float?   @default(18)
  maxTemp     Float?   @default(24)
  minHumidity Float?   @default(30)
  maxHumidity Float?   @default(70)
  alertDelay  Int?     @default(15) // Délai en minutes avant alerte

  // Relations
  sensors       Sensor[]
  subscriptions RoomSubscription[]
  alerts        Alert[]

  @@map("rooms")
}

// Modèle d'abonnement utilisateur à une salle
model RoomSubscription {
  id        String   @id @default(cuid())
  userId    String
  roomId    String
  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  room Room @relation(fields: [roomId], references: [id], onDelete: Cascade)

  @@unique([userId, roomId])
  @@index([userId])
  @@index([roomId])
  @@map("room_subscriptions")
}

// Modèle Capteur Phidget
model Sensor {
  id           String     @id
  roomId       String
  type         SensorType
  serialNumber String     @unique
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  // Relations
  room     Room           @relation(fields: [roomId], references: [id], onDelete: Cascade)
  readings SensorReading[]

  @@index([roomId])
  @@map("sensors")
}

enum SensorType {
  TEMPERATURE
  HUMIDITY
}

// Modèle Lecture de capteur
model SensorReading {
  id        String   @id
  sensorId  String
  value     Float
  timestamp DateTime @default(now())
  createdAt DateTime @default(now())

  // Relations
  sensor Sensor @relation(fields: [sensorId], references: [id], onDelete: Cascade)

  @@index([sensorId, timestamp(sort: Desc)])
  @@index([timestamp(sort: Desc)])
  @@map("sensor_readings")
}

// Modèle Alerte pour éviter le spam d'emails
model Alert {
  id              String      @id @default(cuid())
  roomId          String
  sensorType      SensorType
  thresholdType   String      // 'min' ou 'max'
  value           Float       // Valeur qui a déclenché l'alerte
  threshold       Float       // Seuil dépassé
  sentAt          DateTime    @default(now())
  recipientCount  Int         // Nombre d'emails envoyés

  // Relations
  room Room @relation(fields: [roomId], references: [id], onDelete: Cascade)

  @@index([roomId, sensorType, sentAt(sort: Desc)])
  @@map("alerts")
}
